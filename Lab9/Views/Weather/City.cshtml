@model Lab9.Models.City;
@{
    ViewData["Title"] = "City";
}
<div class="container">
    <div class="container">
        <div class="form-group col-md-offset-3 col-md-5">
            <label asp-for="Name"></label>
            <span>@Model.Name</span><br />
            <label asp-for="Temperature"></label>
            <span>@Model.Temperature</span><br />
            <label asp-for="Humidity"></label>
            <span>@Model.Humidity</span><br />
            <label asp-for="Pressure"></label>
            <span>@Model.Pressure</span><br />
            <label asp-for="Wind"></label>
            <span>@Model.Wind</span><br />
            <label asp-for="Weather"></label>
            <span>@Model.Weather</span><br />
            <form method="get">
                <button asp-controller="Weather" asp-action="SearchByCity" class="btn-primary btn">Back</button>
            </form>
        </div>
    </div>
</div>